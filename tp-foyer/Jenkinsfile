pipeline {
    agent any

    tools {
        jdk 'JAVA_HOME'
        maven 'M2_HOME'
    }

    environment {
        SONAR_HOST_URL = 'http://192.168.56.10:9000'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/houssem22Chakroun/springboot.git'
            }
        }

        stage('Build') {
            steps {
                dir('tp-foyer') {
                    sh 'mvn clean install -DskipTests'
                }
            }
        }

        stage('Maven Package') {
            steps {
                dir('tp-foyer') {
                    sh 'mvn package -DskipTests'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                script {
                    // ADDED: withSonarQubeEnv allows Jenkins to track the analysis ID
                    withSonarQubeEnv('SonarQube') {
                        withCredentials([string(credentialsId: 'SonarQube', variable: 'SONAR_TOKEN')]) {
                            dir('tp-foyer') {
                                sh """
                                    mvn sonar:sonar \
                                      -Dsonar.host.url=${SONAR_HOST_URL} \
                                      -Dsonar.login=${SONAR_TOKEN}
                                """
                            }
                        }
                    }
                }
            }
        }

        // ADDED: This stage waits for the SonarQube callback
        stage('Quality Gate') {
            steps {
                timeout(time: 5, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }
    }

    post {
        success { echo '✅ Build and SonarQube analysis succeeded!' }
        failure { echo '❌ Build or SonarQube analysis failed!' }
    }
}