pipeline {
    agent any

    tools {
        jdk 'JAVA_HOME'
        maven 'M2_HOME'
    }

    environment {
        SONAR_HOST_URL = 'http://192.168.56.10:9000'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/houssem22Chakroun/springboot.git'
            }
        }

        stage('Build') {
            steps {
                // Remove dir('tp-foyer') if pom.xml is in the root of the repo
                dir('tp-foyer') {
                    sh 'mvn clean install -DskipTests'
                }
            }
        }

        stage('Maven Package') {
            steps {
                dir('tp-foyer') {
                    sh 'mvn package -DskipTests'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                script {
                    withCredentials([string(credentialsId: 'sonarqube-token', variable: 'SONAR_TOKEN')]) {
                        dir('tp-foyer') {
                            sh """
                                mvn clean verify sonar:sonar \
                                  -DskipTests=true \
                                  -Dsonar.host.url=${SONAR_HOST_URL} \
                                  -Dsonar.login=${SONAR_TOKEN}
                            """
                        }
                    }
                }
            }
        }

        // MOVED INSIDE THE STAGES BLOCK
        stage('Quality Gate') {
            steps {
                timeout(time: 4, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }
    } // END OF STAGES

    post {
        success { echo '✅ Build and SonarQube analysis succeeded!' }
        failure { echo '❌ Build or SonarQube analysis failed!' }
    }
}